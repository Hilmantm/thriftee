<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/voucher_thumb"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/logo_thriftee"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/voucher_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hiburan"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_margin="@dimen/root_padding"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/voucher_thumb"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/voucher_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher Spotify GRATIS 6 Bulan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/voucher_category"
            app:layout_constraintStart_toStartOf="@id/voucher_category" />

        <TextView
            android:id="@+id/voucher_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting indu ..."
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/root_padding"
            app:layout_constraintTop_toBottomOf="@id/voucher_title"
            app:layout_constraintStart_toStartOf="@id/voucher_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/voucher_point_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thriftee_point"
            android:drawablePadding="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/item_adoption_point_icon"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/root_padding"
            app:layout_constraintTop_toBottomOf="@id/voucher_desc"
            app:layout_constraintStart_toStartOf="@id/voucher_desc"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/voucher_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/voucher_desc"
            app:layout_constraintTop_toTopOf="@id/voucher_point_title"
            app:layout_constraintBottom_toBottomOf="@id/voucher_point_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>